
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reiniciar Clave</title>
    <link rel="stylesheet" href="/Estilos/site.css" />
    <link rel="stylesheet" href="/Librerias/Bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/Librerias/MaterialIcons/css/materialIcons.css" />
    <link rel="stylesheet" href="/Librerias/SweetAlert/css/sweetAlert2.css" />
    <script src="/Librerias/Jquery/js/jquery.min.js"></script>
    <script src="/Librerias/Bootstrap/js/bootstrap.min.js"></script>
    <script src="/Librerias/SweetAlert/js/sweetAlert2.min.js"></script>
    <script src="/Escrituras/Constante.js"></script>
    <script src="/Escrituras/Felix.js"></script>
    <script src="/Escrituras/Publico/Reiniciar.js"></script>
</head>
<body class="h-100">
    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                <div class="form-group">
                    <i class="material-icons">account_box</i><label for="txtUsuario">Usuario:</label>
                    <input type="text" id="txtUsuario" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label id="lblClave1" class="notificacion">*</label><i class="material-icons">https</i><label for="txtClave1">Clave Nueva:</label>
                    <input type="password" id="txtClave1" class="form-control progreso" maxlength="20" placeholder="Clave Nueva" />
                </div>
                <div class="form-group">
                    <label id="lblClave2" class="notificacion">*</label><i class="material-icons">https</i><label for="txtClave2">Confirme Clave:</label>
                <input type="password" id="txtClave2" class="form-control progreso" maxlength="20" placeholder="Confirmar Clave" />
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button id="btnReiniciar" type="button" class="btn btn-outline-primary">Reiniciar Clave</button>
                    <a href="/Publico/Loguear" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Progreso")
</body>
</html>
